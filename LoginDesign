        </div>
    </div>

    <!-- Custom Alert Box -->
    <div id="alert-container">
        <div id="customAlert">
            <p>Login Successful!</p>
            <p id="closeAlert">X</p>
        </div>
    </div>

    <script>
        function showLoading() {
            const spinner = document.getElementById('loadingSpinner');
            spinner.style.display = 'block';
            
            // Simulate a 2-second loading process
            setTimeout(() => {
                spinner.style.display = 'none';
                showCustomAlert(); // Show the custom alert after loading
            }, 2000);
        }

        function showCustomAlert() {
            const customAlert = document.getElementById('alert-container');
            customAlert.style.display = 'block'; // Show the alert

            // Close the alert when clicking the button
            document.getElementById('closeAlert').onclick = function () {
                customAlert.style.display = 'none'; // Hide the alert
            };
        }

    </script>
